<div class="container">
    <div class="row">
        <div class="tpl col-md-3">
            <!--部分テンプレート-->
            <%= render 'tpl', book_new: @book_new, user: @user %>
        </div>
            
        <div class="m-content col-md-8 offset-md-1">
            <!--右半分本文-->
            <h2>Book detail</h2>
            <div>
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <%= link_to user_path(@book.user.id) do %>
                                    <div><%= image_tag @book.user.get_profile_image(100,100) %></div>
                                <% end %>
                                <%= link_to "#{@book.user.name}", user_path(@book.user.id) %>
                                
                                <% if @book.user.followed_by?(current_user, @book.user) %>
                                    <p>フォロー中</p>
                                    <%= link_to user_relationship_path(user_id: @book.user.id, book_id: params[:id]), method: :delete, class:"btn-danger btn-sm" do %>
                                        <span>フォロー解除</span>
                                    <% end %>
                                <% else %>
                                    <%= link_to user_relationship_path(user_id: @book.user.id, book_id: params[:id]), method: :post do %>
                                        <p>フォローする</p>
                                    <% end %>
                                <% end %>
                                
                            </td>
                            <td class="td-text">
                                <%= link_to "#{@book.title}", book_path(params[:id]) %>
                            </td>
                            <td class="td-text">
                                <p><%= @book.body %></p>
                            </td>
                            
                            <td class="td-btn">
                                <% if @book.favorited_by?(current_user) %>
                                    <p>
                                        <%= link_to book_favorite_path(@book), method: :delete do %>
                                            ♥<%= @book.favorites.count %> いいね
                                        <% end %>
                                    </p>
                                <% else %>
                                    <p>
                                        <%= link_to book_favorite_path(@book), method: :post do %>
                                            ♡<%= @book.favorites.count %> いいね
                                        <% end %>
                                    </p>
                                <% end %>
                            </td>
                            
                            <% if @book.user_id == current_user.id %>
                            <td class="td-btn">
                                <!--本のeditページへ-->
                                <p><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success btn-sm" %></p>
                            </td>
                            <td class="td-btn">
                                <!--本のdestroyページへ-->
                                <p><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger btn-sm" %></p>
                            </td>
                            <% end %>
                        </tr>
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
</div>
